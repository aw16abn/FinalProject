<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.AddMemory">
    <ContentPage.Content>
        <StackLayout x:Name="Add_Memory">
            <StackLayout.Padding>
                <OnIdiom x:TypeArguments ="Thickness">

                <!--<OnIdiom.Phone>40,40,40,0</OnIdiom.Phone>
                    //<OnIdiom.Tablet>140,150,140,0</OnIdiom.Tablet> -->
            </OnIdiom>
                
            </StackLayout.Padding>

        

            <ScrollView>
            <StackLayout>

                <Label x:Name="Lbl_Title" Text="Title"/>
                <Entry x:Name="Entry_Title" Placeholder="Title"/>
                <Label x:Name="Lbl_Description" Text="Description"/>
                <Entry x:Name="Entry_Description" Placeholder="Description"/>
                <Label x:Name="Lbl_Date" Text="Date"/>
                <DatePicker x:Name="DatePicker" />
                <Button x:Name="Btn_AddMemory" Text="Submit" Clicked="Btn_AddMemory_Clicked"/>


            </StackLayout>

        </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
